.container
  .row
    .col-xs-6.col-sm-3
      .list-group
        = link_to('All', items_path, class: "list-group-item #{@category.present? ? nil : 'active'}")
        = render(partial: 'categories/partials/category', collection: @categories, locals: {current_category: @category})
    .col-xs-12.col-sm-9
      .panel.panel-default
        .panel-heading
          %h1.panel-title
            = @category.present? ? @category.name : 'ALL'
        .panel-body
          .row
            = render(partial: 'items/partials/item', collection: @items)