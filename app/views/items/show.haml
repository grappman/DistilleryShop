.container
  .col-md-6.col-md-push-3
    .panel
      %h2= @item.name
      = image_tag(@item.image.full, class: 'img-thumbnail img-responsive')
      %p=  @item.description
      %p= "$ #{@item.price}"
      = simple_form_for([current_user, Order.new], remote: true) do |f|
        = f.input   :quantity,  input_html: { value: 1 }
        = f.button  :submit,    'Add to basket', class: 'btn btn-success btn-block'
        = link_to 'Back', items_path, class: 'btn btn-info btn-block'
