- if @orders.present?
  .col-md-9
    = render(partial: 'orders/partials/order', collection: @orders)
  .col-md-3
    .panel.panel-default
      .panel-heading
        .panel-title
          Ordering
        .panel-body
          = "Total amount: #{current_user.total_price} $"
          = simple_form_for(current_user, remote: true) do |f|
            = f.input   :address, label: false, placeholder: 'Address', input_html: { value: nil }
            = f.input   :phone,   label: false, placeholder: 'Phone',   input_html: { value: nil }
            = f.button  :submit,    'Submit', class: 'btn btn-success btn-block'
- else
  .col-md-6.col-md-push-3
    .sign-forms
      %h1.text-center= 'Your basket is empty'